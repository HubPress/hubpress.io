{{#if socialnetwork}}

<nav class="cover-navigation navigation--social">
  <ul class="navigation">

    {{#if socialnetwork.facebook}}
    <!-- Twitter -->
    <li class="navigation__item">
      <a href="{{socialnetwork.facebook}}" title="Facebook account">
        <i class='icon icon-social-facebook'></i>
        <span class="label">Facebook</span>
      </a>
    </li>
    {{/if}}

    {{#if socialnetwork.twitter}}
    <!-- Twitter -->
    <li class="navigation__item">
      <a href="{{socialnetwork.twitter}}" title="Twitter account">
        <i class='icon icon-social-twitter'></i>
        <span class="label">Twitter</span>
      </a>
    </li>
    {{/if}}

    {{#if socialnetwork.googleplus}}
    <!-- Google Plus -->
    <li class="navigation__item">
      <a href="{{socialnetwork.googleplus}}" title="Google+ account">
        <i class='icon icon-social-google-plus'></i>
        <span class="label">Google-plus</span>
      </a>
    </li>
    {{/if}}

    {{#if socialnetwork.github}}
    <!-- Github -->
    <li class="navigation__item">
      <a href="{{socialnetwork.github}}" title="Github account">
        <i class='icon icon-social-github'></i>
        <span class="label">Github</span>
      </a>
    </li>
    </li>
    {{/if}}

    {{#if socialnetwork.instagram}}
    <!-- Github -->
    <li class="navigation__item">
      <a href="{{socialnetwork.instagram}}" title="Instagram account">
        <i class='icon icon-social-instagram'></i>
        <span class="label">Instagram</span>
      </a>
    </li>
    </li>
    {{/if}}

    {{#if socialnetwork.pinterest}}
    <!-- Github -->
    <li class="navigation__item">
      <a href="{{socialnetwork.pinterest}}" title="Pinterest account">
        <i class='icon icon-social-pinterest'></i>
        <span class="label">Pinterest</span>
      </a>
    </li>
    </li>
    {{/if}}

    {{#if socialnetwork.flickr}}
    <!-- Github -->
    <li class="navigation__item">
      <a href="{{socialnetwork.flickr}}" title="Flickr account">
        <i class='icon icon-social-flickr'></i>
        <span class="label">Flickr</span>
      </a>
    </li>
    </li>
    {{/if}}

    {{#if socialnetwork.linkedin}}
    <!-- LinkedIn -->
    <li class="navigation__item">
