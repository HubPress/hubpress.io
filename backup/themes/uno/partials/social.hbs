    {{#if socialnetwork.email}}
    <!-- Email -->
    <li class="navigation__item">
      <a href="mailto:{{socialnetwork.email}}" title="Email {{socialnetwork.email}}">
        <i class='icon icon-mail'></i>
        <span class="label">Email</span>
      </a>
    </li>
    {{/if}}

  </ul>
</nav>

{{/if}}
